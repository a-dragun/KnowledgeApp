<div class="sign-in-container">
  <h2 class="sign-in-title">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'sign-in-form' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'field-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'field-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'field-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me-field">
        <%= f.check_box :remember_me, class: 'remember-me-checkbox' %>
        <%= f.label :remember_me, class: 'remember-me-label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: 'devise-links' %>
</div>
